<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <com.bm.wjsj.View.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/threefold_margin"
                android:padding="@dimen/margin"
                android:text="@string/reasonforregister"
                android:textColor="@drawable/tv_selector"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/xiantiao2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin"
                        android:text="@string/sex"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />


                    <EditText
                        android:id="@+id/et_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:focusable="false"
                        android:gravity="left|center_vertical"
                        android:hint="@string/sex_hint"
                        android:layout_marginLeft="@dimen/margin_"
                        android:padding="@dimen/margin"
                        android:singleLine="true"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin"
                        android:text="@string/phonenumber"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />


                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/logname_edit"
                        android:inputType="number"
                        android:maxLength="11"
                        android:layout_marginLeft="@dimen/margin_"
                        android:padding="@dimen/margin"
                        android:singleLine="true"
                        android:textColor="@color/tv_color_login"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@mipmap/xiantiao" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin"
                        android:text="@string/code"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />


                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/inputcode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:layout_marginLeft="@dimen/margin_"
                        android:padding="@dimen/margin"
                        android:singleLine="true"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:id="@+id/tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@mipmap/btn_code_bg"
                        android:gravity="center"
                        android:text="@string/sendcode"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@mipmap/xiantiao" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin"
                        android:text="密码：    "
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />


                    <EditText
                        android:id="@+id/et_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/input_pass"
                        android:maxLength="16"
                        android:layout_marginLeft="@dimen/margin_"
                        android:padding="@dimen/margin"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/tv_color_login"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@mipmap/xiantiao" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin"
                        android:text="@string/checkpwd"
                        android:textColor="@color/tv_color_register"
                        android:textSize="@dimen/normal_text_size" />
                    <!--<EditText-->
                        <!--android:id="@+id/et_pwd"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="@null"-->
                        <!--android:gravity="left|center_vertical"-->
                        <!--android:hint="@string/input_pass"-->
                        <!--android:maxLength="16"-->
                        <!--android:padding="@dimen/margin"-->
                        <!--android:password="true"-->
                        <!--android:singleLine="true"-->
                        <!--android:textColor="@color/tv_color_login"-->
                        <!--android:textSize="@dimen/normal_text_size" />-->

                    <EditText
                        android:id="@+id/et_again_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="@string/checkpwds"
                        android:maxLength="16"
                        android:paddingBottom="@dimen/margin"
                        android:paddingRight="@dimen/margin"
                        android:paddingTop="@dimen/margin"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="@color/tv_color_login"
                        android:textSize="@dimen/normal_text_size" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/xiantiao2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin"
                    android:text="@string/text_register"
                    android:textColor="@color/tv_color_register"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin"
                    android:paddingTop="@dimen/margin"
                    android:singleLine="true"
                    android:text="@string/agreement"
                    android:textColor="@drawable/tv_selector"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>

            <com.andexert.library.RippleView xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rv_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/double_margin"
                android:layout_marginBottom="@dimen/double_margin"
                ripple:rv_rippleDuration="200"
                ripple:rv_type="rectangle"
                ripple:rv_zoomDuration="200">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/register_btn_bg"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_text_size" />

            </com.andexert.library.RippleView>

        </LinearLayout>
    </com.bm.wjsj.View.MyScrollView>

</LinearLayout>