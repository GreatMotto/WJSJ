<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <include layout="@layout/title_bar" />

    <com.bm.wjsj.View.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:src="@mipmap/xiantiao2" />

            <TextView
                android:id="@+id/tv_modify_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_modify"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/modify_p"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_myaddr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_addr"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/myaddr"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_modify_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_modifypwd"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/modify_pwd"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ac_pushr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/i_s_activity"
                    android:drawablePadding="@dimen/double_margin"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin"
                    android:text="@string/activity_push"
                    android:textColor="@color/tv_color_login"
                    android:textSize="@dimen/normal_text_size" />

                <com.bm.wjsj.View.SwitchView
                    android:id="@+id/sv_activity"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_talk_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/i_s_talk"
                    android:drawablePadding="@dimen/double_margin"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin"
                    android:text="@string/talk_push"
                    android:textColor="@color/tv_color_login"
                    android:textSize="@dimen/normal_text_size" />

                <com.bm.wjsj.View.SwitchView
                    android:id="@+id/sv_talk"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_push"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/i_s_add"
                    android:drawablePadding="@dimen/double_margin"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin"
                    android:text="@string/attention_push"
                    android:textColor="@color/tv_color_login"
                    android:textSize="@dimen/normal_text_size" />

                <com.bm.wjsj.View.SwitchView
                    android:id="@+id/sv_add"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiantiao2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:src="@mipmap/xiantiao2" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_feedback"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/feedback"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_about"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/aboutus"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_help"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/help"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_tellf"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/tellfriends"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_update"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/update"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:src="@mipmap/xiantiao" />

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_s_clear"
                android:drawablePadding="@dimen/double_margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:padding="@dimen/margin"
                android:text="@string/clear"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiantiao2" />

            <com.andexert.library.RippleView xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/double_margin"
                android:layout_marginTop="@dimen/double_margin"
                ripple:rv_rippleDuration="200"
                ripple:rv_type="rectangle"
                ripple:rv_zoomDuration="200">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_btn_exit"
                    android:gravity="center"
                    android:text="@string/exit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/big_text_size" />
            </com.andexert.library.RippleView>
        </LinearLayout>

    </com.bm.wjsj.View.MyScrollView>

</LinearLayout>

