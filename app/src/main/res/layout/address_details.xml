<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="收货人:"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:background="@null"
            android:editable="true"
            android:maxLength="4"
            android:paddingLeft="@dimen/margin"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide"></View>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="联系方式:"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_phone"
            android:background="@null"
            android:editable="true"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="@dimen/margin"
            android:phoneNumber="true"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide"></View>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:id="@+id/rl_area">

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="所在地区:"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/et_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_area"
            android:background="@null"
            android:editable="true"
            android:paddingLeft="@dimen/margin"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/shop_more" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/divide"></View>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_area_deatils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="详细地址:"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

        <EditText
            android:id="@+id/et_area_deatils"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_area_deatils"
            android:background="@null"
            android:editable="true"
            android:paddingLeft="@dimen/margin"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/normal_text_size" />

    </RelativeLayout>


</LinearLayout>
