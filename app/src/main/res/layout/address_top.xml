<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_formmy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_pay_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/margin"
                android:text="待支付"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/normal_text_size" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_pay_status"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_num_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="@dimen/margin"

                    android:text="订单号："
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
                <TextView
                    android:id="@+id/tv_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:text="2015010004104"
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
</LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_order_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:paddingLeft="@dimen/margin"
                    android:text="下单时间："
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:padding="@dimen/margin"
                    android:text="2015-08-14 22:14"
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view_odre_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin"
            android:background="@color/bg_color"
            android:visibility="visible"></View>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:src="@mipmap/address" />

        <ImageView
            android:id="@+id/iv_address_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:src="@mipmap/addre_more" />

        <LinearLayout
            android:id="@+id/ll_cent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_address_more"
            android:layout_toRightOf="@id/iv_address_icon"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/margin">
                <TextView
                    android:id="@+id/tv_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="收货人："
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_name_text"
                    android:text="王大锤"
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_my_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15972823048"
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/margin">
                <TextView
                    android:id="@+id/tv_my_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin"
                    android:layout_alignParentLeft="true"
                    android:text="收货地址："
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin"
                    android:layout_toRightOf="@+id/tv_my_address_text"
                    android:text="中国山东蓝翔"
                    android:textColor="@color/classifyname_color"
                    android:textSize="@dimen/normal_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divider"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin"
            android:layout_below="@id/ll_cent"
            android:background="@color/bg_color"
            android:visibility="gone"></View>
    </RelativeLayout>
</LinearLayout>
