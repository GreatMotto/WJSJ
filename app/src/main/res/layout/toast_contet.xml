<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_00"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/double_margin"
        android:background="@mipmap/box"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_toast_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/double_margin"
            android:paddingRight="@dimen/double_margin"
            android:paddingTop="@dimen/double_margin"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="@dimen/big_text_size" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/double_margin"
            android:text="举报成功，等待管理员审核"
            android:textColor="@color/deafaut_text"
            android:textSize="@dimen/small_text_size" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color"></View>



            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/double_margin"
                android:text="确定"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/normal_text_size" />
    </LinearLayout>

</LinearLayout>
