<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/titleMessage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sevenfold_margin"
        android:background="@mipmap/title_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:src="@mipmap/sidebar" />

        <TextView
            android:id="@+id/tv_sidebar"
            android:layout_width="@dimen/sevenfold_margin"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/msg"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size" />

    </RelativeLayout>

    <com.bm.wjsj.View.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:fadingEdgeLength="0dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_msg_attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_m_attention"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/double_margin"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/double_margin"
                android:text="@string/msg_attention"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiantiao2" />

            <TextView
                android:id="@+id/tv_msg_ac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_m_ac"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/double_margin"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/double_margin"
                android:text="@string/msg_ac"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiantiao2" />

            <TextView
                android:id="@+id/tv_msg_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/i_m_system"
                android:drawablePadding="@dimen/margin"
                android:drawableRight="@mipmap/icon_p_more"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/double_margin"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/double_margin"
                android:text="@string/msg_system"
                android:textColor="@color/tv_color_login"
                android:textSize="@dimen/normal_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiantiao2" />
        </LinearLayout>
    </com.bm.wjsj.View.MyScrollView>

    <include layout="@layout/rc_fragment" />
</LinearLayout>
